@page
@model Dyreinternat.Pages.Animals.IndexModel

<h1>Dyr på internatet</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Art</th>
            <th>Race</th>
            <th>Chipnummer</th>
            <th>Fødselsår</th>
            <th>Behov for dyrlæge</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model.Animals)
        {
            <tr>
                <td>@animal.Name</td>
                <td>@animal.Species</td>
                <td>@animal.Breed</td>
                <td>@animal.ChipNumber</td>
                <td>@animal.BirthYear</td>
                <td>@(animal.NeedsVet ? "Ja" : "Nej")</td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="Create" class="btn btn-primary">Opret nyt dyr</a>
